@inherits Umbraco.Web.Mvc.UmbracoTemplatePage


    @{
        var speakers = Model.Content.Site().Descendants<NewSpeakerPost>();

        foreach (var item in speakers)
        {
            
        <div class="col-sm-6 col-md-4 col-lg-3 mt-4">
        <div class="card">
            <img class="card-img-top" src="@item.SpeakerPicturePost.Url">
            <div class="card-block">
              <a href="@item.Url" > <h4 class="card-title">@item.SpeakernamePost</h4> </a>
                <div class="meta">
                    <a href="#">Friends</a>
                </div>
                <div class="card-text">
                    @item.SpeakerDescriptionPost
                </div>
            </div>
            <div class="card-footer">
                <span class="float-right">Joined in 2013</span>
                <span><i class=""></i>75 Friends</span>
            </div>
        </div>
    </div>

        }

    }



    